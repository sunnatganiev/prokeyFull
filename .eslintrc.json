{
  "root": true,
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": 0,
    "spaced-comment": 0,
    "no-console": 1,
    "consistent-return": 0,
    "func-names": 0,
    "object-shorthand": 0,
    "no-process-exit": 0,
    "no-param-reassign": 0,
    "no-return-await": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "prefer-destructuring": [2, { "object": true, "array": false }],
    "no-unused-vars": [1, { "argsIgnorePattern": "req|res|next|val" }]
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  }
}
