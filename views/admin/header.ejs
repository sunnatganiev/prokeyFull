<header class="navbar navbar-light bg-white sticky-top shadow-sm py-2 px-0">
  <div class="container-fluid flex-md-nowrap w-100">
    <div class="d-flex w-100 justify-content-between align-items-center">
      <p class="col-md-3 col-lg-2 mb-0 text-uppercase"><%= user.name %></p>
      <div class="d-flex align-items-center">
        <div class="dropdowm mr-2 position-relative">
          <button
          class="dropdown-toggle text-uppercase text-dark"
          type="button"
          id="dropdownMenuButtonM"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          <%= getLocale() %>
        </button>
        <div
          class="dropdown-menu"
          style="min-width: 50px"
          aria-labelledby="dropdownMenuButtonM"
        >
        <% getLocales().forEach(el=> { %>
          <% if (getLocale() !== el) { %>
            <a class="dropdown-item text-uppercase" referrerpolicy="origin-when-cross-origin" href="/setlocale/<%= el %>">
              <%= el %>
            </a>
          <% } %>
        <% }) %>
        </div>
        </div>
        <div class="dropdown">
          <button
            type="button"
            class="btn p-0"
            id="profile-dropdown"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >
            <div class="square-50 overflow-hidden rounded-circle">
              <img
                src="<%= user.photo %>"
                class="w-100 h-100 object-fit-cover"
                alt="<%= user.name %>"
              />
            </div>
          </button>
          <div
            class="dropdown-menu dropdown-menu-right"
            aria-labelledby="profile-dropdown"
          >
            <a
              href="/dashboard/user/id/<%= user._id %> "
              class="btn dropdown-item btn-sm d-flex align-items-center"
            >
              <div class="icon-wrapper mr-2">
                <i class="fas fa-sliders-h"></i>
              </div>
              Sozlamalar
            </a>
            <a href="<%= api("users/logout") %> " class="btn dropdown-item btn-sm d-flex align-items-center">
              <div class="icon-wrapper mr-2">
                <i class="fas fa-power-off"></i>
              </div>
              Chiqish
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
