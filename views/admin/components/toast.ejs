<div class="toast fade show" role="alert" aria-live="assertive" aria-atomic="true"  style="position: fixed; bottom: 10px; right: 10px; min-width: 300px; z-index: 1000;">
  <div class="toast-header">
    <div style="width: 20px;height: 20px;" class="rounded bg-<%= type %> mr-2"></div>
    <strong class="mr-auto"><%= __(type) %></strong>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    <strong><%= content %> </strong>
  </div>
</div>