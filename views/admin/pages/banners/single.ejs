<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="/img/favicon1.png" type="image/png" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="dashboard">
    <div class="dashboard-content-wrapper">
      <%- include('../../sidebar.ejs', { page: 'banners' }) %>

      <main>
        <%- include('../../header.ejs') %>
        <div class="dashboard-content">
          <div class="container-fluid">
            <div class="dashboard-content__header py-3 border-bottom">
              <h6 class="font-weight-bold text-muted mb-0">Bannerlar</h6>
              
            </div>
            <div class="row px-3">
              <div class="col-lg-9 col-md-12 my-3">
                <div class="row">
                  <div class="col-lg-12 dashboard__card">
                    <div class="p-3 shadow-sm">
                      <form>
                        <div class="mb-4">
                          <h6 class="title-left-stick mb-3">Malumotlar</h6>
                          <div class="row">
                            <div class="col-lg-4 col-md-6 col-sm-12">
                              <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span
                                    class="input-group-text bg-success text-white"
                                    >Sarlavha</span
                                  >
                                </div>
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder="Banner nomi"
                                  name="name"
                                  value="Magniy"
                                />
                              </div>
                            </div>
                            <div class="col-lg-4 col-md-6 col-sm-12">
                              <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span
                                    class="input-group-text bg-success text-white"
                                    >Ta'rif</span
                                  >
                                </div>
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder="Banner ta'rifi"
                                  name="description"
                                  value="Ta'rif"
                                />
                              </div>
                            </div>

                            <div class="col-lg-4 col-md-6 col-sm-12">
                              <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span
                                    class="input-group-text bg-success text-white"
                                    >URL</span
                                  >
                                </div>
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder="Banner url"
                                  name="url"
                                  value="some url"
                                />
                              </div>
                            </div>

                          </div>
                        </div>
    
                        <div class="mb-4">
                          <h6 class="title-left-stick mb-3">Rasm</h6>
                          <div class="row">
                            <div class="col-12">
                              <div class="file-loading">
                                <input
                                  data-count="1"
                                  data-images=["/img/slide-1.jpg"]
                                  id="input-images"
                                  name="images"
                                  type="file"
                                  accept="image/*"
                                />
                              </div>
                            </div>
                          </div>
                        </div>
  
  
                        <button
                          type="submit"
                          class="btn btn-primary text-uppercase"
                        >
                          Saqlash
                        </button>
                      </form>
                    </div>
                  </div>

                  <div class="col-lg-12">
                    <nav aria-label="Page navigation example">
                      <ul class="pagination">
                        <li class="page-item disabled">
                          <a
                            class="page-link"
                            href="#"
                            tabindex="-1"
                            aria-disabled="true"
                            ><i class="fas fa-chevron-left"></i
                          ></a>
                        </li>
                        <li class="page-item active">
                          <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                          <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                          <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                          <a class="page-link" href="#"
                            ><i class="fas fa-chevron-right"></i
                          ></a>
                        </li>
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>
              <%- include('../../components/right-sidebar.ejs') %>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script src="/scripts/backend/index.js"></script>
    <script src="/scripts/main.js"></script>
  </body>
</html>
