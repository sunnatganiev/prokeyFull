<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="/img/favicon1.png" type="image/png" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="dashboard">
    <div class="dashboard-content-wrapper">
      <%- include('../../sidebar.ejs', { page: 'news' }) %>

      <main>
        <%- include('../../header.ejs') %>
        <div class="dashboard-content">
          <div class="container-fluid">
            <div class="dashboard-content__header py-3 border-bottom">
              <h6 class="font-weight-bold text-muted mb-0">Yangiliklar</h6>
              <a href="news/add">
                Yangi qo'shish
                <i class="fas fa-user-plus"></i>
              </a>
            </div>
            <div class="row px-3">
              <div class="col-lg-9 col-md-12 my-3">
                <div class="row">
                  <div class="col-lg-12 dashboard__card">
                    <div class="p-3 shadow-sm">
                        <h6 class="title-left-stick mr-4 mb-3">Yangiliklar</h6>
                        
                      <table
                        class="table table-responsive-md custom-table table-hover table-borderless table-sm"
                      >
                        <thead class="thead-light">
                          <tr>
                            <th scope="col">Rasm</th>
                            <th scope="col">Sarlavha</th>
                            <th scope="col">Qisqa ta'rif</th>
                            <th scope="col">Yaratilgan sana</th>
                            <th scope="col">Amallar</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% newsList.forEach(news => { %>
                            <tr>
                              <td>
                                <img
                                src="<%= news.photo %>"
                                height="50"
                                class="square-50 img-thumbnail object-fit-contain"
                                alt="<%= news.title %>"
                              />
                              </td>
                              <td><a href="/dashboard/news/id/<%= news._id %>"><%= news.title %></a></td>
                              <td><%= news.shortDescription %></td>
                              <td><%= new Date(news.createdAt).toLocaleString("ru") %></td>
                              <td>
                                <div class="d-flex justify-content-center">
                                  <div class="dropdown d-flex align-items-center">
                                    <a href="#" class="btn btn-danger btn-sm" id="dropDownDeleteConfirm"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-trash"></i></a>
                                    <div class="dropdown-menu p-3" aria-labelledby="dropDownDeleteConfirm">
                                      <h6 class="text-center">Ushbu maxsulotni o'chirishni tasdiqlaysizmi?</h6>
                                      <div class="d-flex justify-content-center">
                                        <form method="POST" action="<%= api("news/delete") %>" class="d-flex">
                                          <input type="hidden" name="id" value="<%= news._id %>">
                                          <button type="submit" class="btn btn-danger btn-sm mr-1">HA</button>
                                        </form>
                                       
                                        <a class="btn btn-success btn-sm ml-1" href="#">YO'Q</a>
                                      </div>
                                    </div>
                                  </div>
                                  <a href="/dashboard/news/id/<%= news._id %>" class="btn btn-warning btn-sm ml-2 d-block"><i class="fas fa-edit"></i></a>
                                </div>
                              </td>
                            </tr>
                          <% }) %>
                         
                         
                        </tbody>
                      </table>
                    </div>
                  </div>

