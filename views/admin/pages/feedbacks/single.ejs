<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="/img/favicon1.png" type="image/png" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="dashboard">
    <div class="dashboard-content-wrapper">
      <%- include('../../sidebar.ejs', { page: 'feedbacks' }) %>

      <main>
        <%- include('../../header.ejs') %>
        <div class="dashboard-content">
          <div class="container-fluid">
            <div class="dashboard-content__header py-3 border-bottom">
              <h6 class="font-weight-bold text-muted mb-0"><%= __("feedbacks") %> </h6>
             
            </div>
            <div class="row px-3">
              <div class="col-lg-9 col-md-12 my-3">
                <div class="row">
                  
                  <div class="col-lg-12 dashboard__card">
                    <div class="p-3 shadow-sm">
                      <form method="POST" enctype="multipart/form-data" action="<%= api("feedbacks/edit") %>">
                        <input type="hidden" name="id" value="<%= feedback._id %>">
                        <div class="mb-4">
                          <h6 class="title-left-stick mb-3">Malumotlar</h6>
                          <div class="row">
                            <div class="col-lg-12">
                              <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span
                                    class="input-group-text bg-success text-white"
                                    >F.I.SH</span
                                  >
                                </div>
                                <input
                                  type="text"
                                  class="form-control"
                                  placeholder="F.I.SH"
                                  name="fullname"
                                  value="<%= feedback.fullname %>"
                                  required
                                />
                              </div>
                            </div>
                            <div class="col-lg-12">
                              <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span
                                    class="input-group-text bg-success text-white"
                                    >Ta'rif</span
                                  >
                                </div>
                                <textarea
                                  class="form-control"
                                  placeholder="Ta'rif"
                                  name="description"
                                  required
                                  rows="6"
                                ><%= feedback.description %> </textarea>
                              </div>
                            </div>

                          </div>
                        </div>
    
                        <div class="mb-4">
                          <h6 class="title-left-stick mb-3">Rasm</h6>
                          <div class="row">
                            <div class="col-12">
                              <div class="file-loading">
                                <input
                                  data-count="1"
                                  data-images="<%= feedback.photo %>"
                                  id="input-feedback-images"
                                  name="photo"
                                  type="file"
                                  accept="image/*"
                                />
                              </div>
                            </div>
                          </div>
                        </div>
  
  
                        <button
                          type="submit"
                          class="btn btn-primary text-uppercase"
                        >
                          Saqlash
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <%- include('../../components/right-sidebar.ejs') %>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script src="/scripts/backend/index.js"></script>
    <script src="/scripts/main.js"></script>
  </body>
</html>
