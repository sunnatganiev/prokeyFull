<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="/img/favicon1.png" type="image/png" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="dashboard">
    <div class="dashboard-content-wrapper">
      <%- include('../../sidebar.ejs', { page: 'messages' }) %>

      <main>
        <%- include('../../header.ejs') %>
        <div class="dashboard-content">
          <div class="container-fluid">
            <div class="dashboard-content__header py-3 border-bottom">
              <h6 class="font-weight-bold text-muted mb-0"> <%= __("messages") %> </h6>
            </div>
            <div class="row px-3">
              <div class="col-lg-9 col-md-12 my-3">
                <div class="row">
                  <div class="col-lg-12 dashboard__card">
                    <div class="p-3 shadow-sm">
                      <div class="d-flex align-items-center mb-3">
                        <h6 class="title-left-stick mr-4"> <%= __("messages") %></h6>
                      </div>
                      <div class="row">
                        <% messages.reverse().forEach(x => { %>
                          <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="card mx-2 mb-2" style="width: 100%" >
                              <div class="card-body">
                                <h5 class="card-title" style="height: 200px; overflow-y: auto;"><%= `${x.message}` %></h5>
                                <div class="card-text">
                                  <p class="text-dark"><strong class="text-danger"><%= __("name") %>: </strong>
                                    <%= x.name %>
                                  </p>
                                  <p class="text-dark"><strong class="text-danger"><%= __("phoneNumber") %>: </strong>
                                    <a href="tel:<%= x.phoneNumber %>"><%= x.phoneNumber %></a>
                                  </p>
                                  <p class="text-dark"><strong class="text-danger"><%= __("email") %>: </strong>
                                    <a href="mailto:<%= x.email %>"><%= x.email %></a>
                                  </p>%></p>
                                  <p class="text-dark"><strong class="text-danger"><%= __("date") %>: </strong>
                                    <%= new Date(x.createdAt).toLocaleString("ru") %>
                                  </p>%></p>
                                </div>
                              </div>
                            </div>
                          </div>
                        <% }) %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <%- include('../../components/right-sidebar.ejs') %>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script src="/scripts/backend/index.js"></script>
    <script src="/scripts/main.js"></script>
  </body>
</html>
