<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="/img/favicon1.png" type="image/png" />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="dashboard">
    <div class="dashboard-content-wrapper">
      <%- include('../../sidebar.ejs', { page: 'products' }) %>

      <main>
        <%- include('../../header.ejs') %>
        <div class="dashboard-content">
          <div class="container-fluid">
            <div class="dashboard-content__header py-3 border-bottom">
              <h6 class="font-weight-bold text-muted mb-0">
                <%= __("addNew") %>
              </h6>
            </div>
            <div class="row px-3">
              <div class="col-lg-12 my-3">
                <div class="dashboard__card bg-white p-3 rounded mx-n3">
                  <form action="<%= api("products/edit") %>" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%= product._id %>">
                    <div class="mb-4">
                      <h6 class="title-left-stick mb-3"><%= __("info") %></h6>
                      <div class="row">
                        <div class="col-lg-4 col-md-6 col-sm-12">
                          <div class="input-group mb-3">
                            <div class="input-group-prepend">
                              <span
                                class="input-group-text bg-success text-white"
                                ><%= __("title") %></span
                              >
                            </div>
                            <input
                              type="text"
                              class="form-control"
                              placeholder="<%= __("title") %>"
                              name="name"
                              value="<%= product.name %>"
                              required
                            />
                          </div>
                        </div>
                        <!-- <div class="col-lg-4 col-md-6 col-sm-12">
                          <div class="input-group mb-3">
                            <div class="input-group-prepend">
                              <span
                                class="input-group-text bg-success text-white"
                                >Soni</span
                              >
                            </div>
                            <input
                              type="number"
                              min="1"
                              class="form-control"
                              placeholder="Soni"
                              name="quantity"
                              value="<%= product.quantity %>"
                              required
                            />
                          </div>
                        </div> -->
                        <div class="col-lg-4 col-md-6 col-sm-12">
                          <div class="input-group mb-3">
                            <div class="input-group-prepend">
                              <span
                                class="input-group-text bg-success text-white"
                                ><%= __("price") %></span
                              >
                            </div>
                            <input
                              type="number"
                              min="1"
                              class="form-control"
                              placeholder="<%= __("price") %>"
                              name="price"
                              value="<%= product.price %>"
                              required
                            />
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="mb-4">
                      <h6 class="title-left-stick mb-3"><%= __("images") %></h6>
                      <p class="text-danger"><%= __("productImagesNote") %></p>
                      <div class="row">
                        <div class="col-12">
                          <div class="file-loading">
                            <input
                              id="input-product-images"
                              name="images"
                              data-images="<%= product.images.join(",") %>"
                              type="file"
                              accept="image/*"
                              multiple
                            />
                          </div>
                        </div>
                      </div>
                    </div>

                    <div class="mb-4">
                      <h6 class="title-left-stick mb-3"><%= __("description") %></h6>
                      <div class="row">
                        <div class="col-lg-12">
                          <textarea
                            name="description"
                            id="product-description"
                            required
                          ><%= product.description %></textarea>
                        </div>
                      </div>
                    </div>

                    <button
                      type="submit"
                      class="btn btn-primary text-uppercase"
                    >
                      <%= __("save") %>
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>

    <script src="/scripts/backend/index.js"></script>
    <script src="/scripts/main.js"></script>
  </body>
</html>
