<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="img/favicon1.png" type="image/png" />
    <link rel="stylesheet" href="css/main.css" />
    <script defer src="scripts/pages/index.js"></script>
    <title>progresskey.uz | Log In</title>
  </head>
  <body>
    <%- include('./components/nav.ejs', {user: user}) %>

    <div class="container">
      <div class="login-page py-5">
        <div class="w-100 w-md-50 mx-auto">
          <% if (!user) { %>
          <div class="d-flex flex-column align-items-center">
            <div class="logo">
              <img
                src="img/logopresskeyuz.png"
                width="200"
                alt="logo"
                class="mx-auto"
              />
            </div>
            <h1>TIZIMGA KIRISH</h1>
          </div>
          <form id="login">
            <div class="mb-3">
              <label for="email-input" class="form-label mb-1">Email</label>
              <input
                type="email"
                class="form-control"
                autocomplete="email"
                id="email-input"
                placeholder="Email"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label for="password-input" class="form-label mb-1">Parol</label>
              <input
                type="password"
                class="form-control"
                autocomplete="current-password"
                placeholder="Parol"
                id="password-input"
                name="password"
              />
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">
              KIRISH
            </button>
          </form>
          <% } else { %>
          <div class="d-flex flex-column align-items-center">
            <div class="logo">
              <img
                src="img/logopresskeyuz.png"
                width="200"
                alt="logo"
                class="mx-auto"
              />
            </div>
            <h1>TIZIMDAN CHIQISH</h1>
            <h2><%= user.name %></h2>
            <button type="submit" class="btn btn-danger" id="logout">
              CHIQISH
            </button>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('./components/footer.ejs') %>

    <script src="scripts/main.js"></script>
    <script src="scripts/backend/index.js"></script>
  </body>
</html>
