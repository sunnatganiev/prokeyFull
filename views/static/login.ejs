<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/img/favicon1.png" type="image/png" />
    <link rel="stylesheet" href="/css/main.css" />
    <title><%= title %> </title>
  </head>
  <body>
    <%- include('../components/nav.ejs', {user: user, page: 'home'}) %>

    <div class="container">
     
      <div class="login-page py-5">
        <% if (locals.error) { %>
          <%- include('../components/alert.ejs', {
            dismissable: true,
            type: "danger",
            content: __(error)
          }) %> 
        <% } %>
        <div class="w-100 w-md-50 mx-auto">
          <% if (!user) { %>
          <div class="d-flex flex-column align-items-center">
            <div class="logo">
              <img
                src="/img/logopresskeyuz.png"
                width="200"
                alt="logo"
                class="mx-auto"
              />
            </div>
            <h1><%= __("signIn") %></h1>
          </div>
          <form method="POST" action="<%= api("users/login") %>">
            <div class="mb-3">
              <label for="email-input" class="form-label mb-1"><%= __("email") %></label>
              <input
                type="email"
                class="form-control"
                autocomplete="email"
                id="email-input"
                placeholder="<%= __("email") %>"
                name="email"
                required
              />
            </div>
            <div class="mb-3">
              <label for="password-input" class="form-label mb-1"><%= __("password") %></label>
              <input
                type="password"
                class="form-control"
                autocomplete="current-password"
                placeholder="<%= __("password") %>"
                id="password-input"
                name="password"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">
              <%= __("signIn") %>
            </button>
          </form>

          <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#forgotPassword">
            <%= __("forgotPassword") %>
          </button>

          <form class="collapse" id="forgotPassword" method="POST" action="<%= api("users/forgot-password") %>">
            <div class="mb-3">
              <label for="email-input" class="form-label mb-1"><%= __("email") %></label>
              <input
                type="email"
                class="form-control"
                autocomplete="email"
                id="email-input"
                placeholder="<%= __("email") %>"
                name="email"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">
              <%= __("reset") %>
            </button>
          </form>

          <% } else { %>
          <div class="d-flex flex-column align-items-center">
            <div class="logo">
              <img
                src="img/logopresskeyuz.png"
                width="200"
                alt="logo"
                class="mx-auto"
              />
            </div>
            <h1><%= __("signOut") %></h1>
            <h2><%= user.name %></h2>
            <a href="<%= api("users/logout") %>" class="btn btn-danger" id="logout">
              <%= __("signOut") %>
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <%- include('../components/footer.ejs') %>

    <script src="/scripts/main.js"></script>
    <!-- <script src="/scripts/backend/index.js"></script> -->
  </body>
</html>
